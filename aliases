alias addvh="sudo vi /etc/hosts; sudo vi /etc/apache2/extra/httpd-vhosts.conf;"
function rm~ {
  find . -name '*~' -exec rm {} \;
  find . -name '*.orig' -exec rm {} \;
  find . -name 'dump.rdb' -exec rm {} \;
}

alias pgstart="su postgres -c 'source ~/.bashrc && pg_ctl start'"
alias pgstop="su postgres -c 'source ~/.bashrc && pg_ctl stop'"

function gitsweep {
  git branch --merged | grep -E -v "\*|master|develop" | xargs -n 1 git branch -d
}

function fileserver {
  if [ $1 ]; then
    python -mSimpleHTTPServer $1
  else
    python -mSimpleHTTPServer 3000
  fi
}

function clean_temp {
  find ~/temp -mtime +40 -type f -exec rm {} \;
  find ~/temp -type d -empty -exec rmdir {} \;
}

function s3_deploy {
  rm~
  nanoc prune --yes
  s3cmd sync ./output/ s3://www.nathanfeaver.com
}


### TMUX

# New Session
function tmn {
  if [ $1 ]; then
    tmux new -s $1
  else
    echo "expected session_name argument"
  fi
}

# Attach Session
function tma {
  if [ $1 ]; then
    tmux attach -t $1
  else
    echo "expected session_name argument"
  fi
}

# Switch Session
function tms {
  if [ $1 ]; then
    tmux switch -t $1
  else
    echo "expected session_name argument"
  fi
}

# List Sessions
function tml {
  tmux list-sessions
}


### TMUX

# List Sessions
function tml {
  tmux list-sessions
}

### POSTGRES

alias pgstop="launchctl unload ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist"
alias pgstart="launchctl load ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist"
alias pgps="ps auxw | grep postgres"

### GIT

alias gitundo="git reset --soft HEAD~1; git status"
function gitsweep {
  git branch --merged | grep -E -v "\*|master|develop" | xargs -n 1 git branch -d
}

function gup {
  eval "$( git push 2>&1 >/dev/null | grep -o 'git push.*$' )"
}

function gpr {
  hub pull-request -b develop
}

function gas {
  if [ $2 ]; then
    ghi assign $1 $2
  else
    ghi assign $1 darkhelmet
  fi
}

function glr {
  ghi label $1 "Ready For Review"
}

function glf {
  ghi label $1 "Feature"
}

function glb {
  ghi label $1 "Bug"
}

function glw {
  ghi label $1 "WIP"
}

### TESTING

alias rof="rspec --only-failures"
alias rpr='rspec $(git diff --name-only develop spec/**/*_spec.rb)'
alias my_cop="rubocop -D -c .rubocop.nathan.yml"

### MISC

alias ctags="`brew --prefix`/bin/ctags"

function fileserver {
  if [ $1 ]; then
    python -mSimpleHTTPServer $1
  else
    python -mSimpleHTTPServer 3000
  fi
}

function clean_temp {
  find ~/temp -mtime +40 -type f -exec rm {} \;
  find ~/temp -type d -empty -exec rmdir {} \;
}

function s3_deploy {
  rm~
  nanoc prune --yes
  s3cmd sync ./output/ s3://www.nathanfeaver.com
}

function rm~ {
  find . -name '*~' -exec rm {} \;
  find . -name '*.orig' -exec rm {} \;
  find . -name 'dump.rdb' -exec rm {} \;
}

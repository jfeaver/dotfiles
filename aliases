alias addvh="sudo vi /etc/hosts; sudo vi /etc/apache2/extra/httpd-vhosts.conf;"
function rm~ {
  find . -name '*~' -exec rm {} \;
  find . -name '*.orig' -exec rm {} \;
  find . -name 'dump.rdb' -exec rm {} \;
}

alias ssh-se="ssh studentenergy.org@s116422.gridserver.com"

alias pgstop="launchctl unload ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist"
alias pgstart="launchctl load ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist"
alias pgps="ps auxw | grep postgres"
alias gitundo="git reset --soft HEAD~1; git status"
# alias gitpushpr="git push 2>&1 tee /dev/tty | grep -o '^https.*$' | xargs open"   # Not quite working

function gitsweep {
  git branch --merged | grep -E -v "\*|master|develop" | xargs -n 1 git branch -d
}

function gitpushup {
  eval "$( git push 2>&1 >/dev/null | grep -o 'git push.*$' )"
}

function fileserver {
  if [ $1 ]; then
    python -mSimpleHTTPServer $1
  else
    python -mSimpleHTTPServer 3000
  fi
}

function clean_temp {
  find ~/temp -mtime +40 -type f -exec rm {} \;
  find ~/temp -type d -empty -exec rmdir {} \;
}

function s3_deploy {
  rm~
  nanoc prune --yes
  s3cmd sync ./output/ s3://www.nathanfeaver.com
}


### TMUX

# New Session
function tmn {
  if [ $1 ]; then
    tmux -2 new -s $1
  else
    echo "expected session_name argument"
  fi
}

# Attach Session
function tma {
  if [ $1 ]; then
    tmux -2 attach -t $1
  else
    echo "expected session_name argument"
  fi
}

# Switch Session
function tms {
  if [ $1 ]; then
    tmux -2 switch -t $1
  else
    echo "expected session_name argument"
  fi
}

# List Sessions
function tml {
  tmux list-sessions
}

